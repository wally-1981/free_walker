<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>dist</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}\src\main\resources\db\schema</directory>
			<outputDirectory>\setup</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}\target\lib</directory>
			<outputDirectory>\lib</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}\target</directory>
			<outputDirectory>\</outputDirectory>
			<includes>
				<include>com.free.walker.service.itinerary-*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}\src\main\resources</directory>
			<outputDirectory>\</outputDirectory>
			<includes>
				<include>startServer.*</include>
				<include>startServerDevo.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}\src\test\java\com\free\walker\service\itinerary\rest</directory>
			<outputDirectory>\test</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}\src\main\resources\com\free\walker\service\itinerary\dao</directory>
			<outputDirectory>\conf</outputDirectory>
			<includes>
				<include>config.properties</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>